<UserControl x:Class="Tre.Settings.Pages.Language_Page"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:uc="clr-namespace:Tre.Settings.UserControls">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" MaxWidth="800" Margin="50 0">
		<uc:Settings Title="English" HasText="True" HasToggle="True" IsChecked="True" />
        <uc:Settings Title="Vietnamese" HasText="True" HasToggle="True" IsChecked="False" />
        <uc:Settings Title="Chinese" HasText="True" HasToggle="True" IsChecked="False" />
    </StackPanel>
</UserControl>
