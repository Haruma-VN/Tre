<UserControl x:Class="Tre.Settings.Pages.MainInterface"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:UserControls="clr-namespace:Tre.Settings.UserControls">
    <Grid Margin="20" x:Name="grid">
        <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Auto" Padding="0 20" VerticalAlignment="Center"  Width="{Binding ElementName=grid, Path=ActualWidth}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <UserControls:Element Icon="Settings" Title="Settings" ElementClick="Element_Click_Setting"/>
                <UserControls:Element Icon="BookOpen" Title="Language" ElementClick="Element_Click_Language"/>
                <UserControls:Element Icon="HelpCircle" Title="Introduce" ElementClick="Element_Click_Help"/>
                <UserControls:Element Icon="Information" Title="About" ElementClick="Element_Click_About"/>
            </StackPanel>
        </ScrollViewer>
            </Grid>
</UserControl>
