<UserControl x:Class="Tre.Settings.UserControls.ExitLog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="#212121">
    <StackPanel Margin="20">
        <TextBlock Text="Do you want to close the application?"
                   Foreground="#fcf9f4"
                   FontSize="16"
                   Margin="0 0 20 0"/>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button Content="Yes"
                    Width="75"
                    Height="30"
                    Background="#212121"
                    Foreground="#fcf9f4"
                    BorderBrush="#c6c6c6"
                    BorderThickness="1"
                    Margin="10 0 0 0" Click="Button_Click"/>
            <Button Content="No"
                    Width="75"
                    Height="30"
                    Background="#212121"
                    Foreground="#fcf9f4"
                    BorderBrush="#c6c6c6"
                    BorderThickness="1"
                    Margin="10 0 0 0"/>
        </StackPanel>
    </StackPanel>
</UserControl>
