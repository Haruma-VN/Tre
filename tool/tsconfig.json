{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "removeComments": true,
    "preserveConstEnums": true,
    "paths": {
      "~/*": ["./dist/*"]
    },
    "rootDir": "./src",
    "outDir": "./dist"
  }
}
